[colors]
my_background = #2d303b
my_foreground = #c4cbd4

[bar/main_bar]
monitor = ${env:MONITOR:eDP-1}
bottom = false
width = 100%
height = 20
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true


background = ${colors.my_background}
foreground = ${colors.my_foreground}

line-size = 2.5
line-color = #233f66

border-size = 0
border-color = #657893

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 1

font-0 = monospace:size=8;0
font-1 = Unifont:size=10;0
font-2 = JoyPixels:scale=14;0
font-3 = Symbols Nerd Font:size=10;1

modules-left = i3
modules-center = date 
modules-right = keyboard backlight pulseaudio battery

tray-position = right
tray-padding = 1
tray-offset-y = 0%
tray-offset-x = 0%
tray-maxsize = 18
tray-scale = 1
tray-detached = false
atray-background = ${colors.my_background}

;wm-restack = i3

override-redirect = false

[module/i3]
type = internal/i3
format = <label-state><label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
pin-workspaces = true

label-unfocused-background = ${colors.my_background}
label-unfocused-foreground = ${colors.my_foreground}

label-mode = %name%
label-mode-padding = 2
label-mode-background = #ff0000

label-focused = %name%
label-focused-foreground = ${colors.my_foreground}
label-focused-background = ${colors.my_background}
label-focused-underline = #4084d6
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 2

label-visible = %name%
label-visible-underline = ${colors.my_foreground}
label-visible-padding = 2

label-urgent = %index%
label-urgent-foreground = ${colors.my_foreground}
label-urgent-background = ${colors.my_background}
label-urgent-underline = #900000
label-urgent-padding = 2

[module/date]
type = internal/date
interval = 5

date =
;date-alt = "%d/%m/%Y"

time = "%a %b %d, %H:%M "

;time-alt = %H:%M

format-prefix-foreground = ${colors.my_foreground}
format-underline =


label = %date% %time%


[module/pulseaudio]
type = internal/pulseaudio

; Soundcard to be used
; Usually in the format hw:#
master-soundcard = hw:0

; Name of the master mixer
; Default: Master
master-mixer = Master

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${colors.my_foreground}

format-muted-prefix =
format-muted-foreground = #900000
label-muted = VOL ░░░░░░░░░░

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
;bar-volume-indicator = |
bar-volume-indicator-font = 1
;bar-volume-fill = ─
bar-volume-fill-font = 1
;bar-volume-empty = ─
bar-volume-indicator = ▓
bar-volume-fill = ▒
bar-volume-fill-font-style = bold
bar-volume-empty = ░
bar-volume-empty-foreground = ${colors.my_foreground}

; Use volume mapping (similar to amixer -M and alsamixer), where the increase in volume is linear to the ear
; Default: false
mapped = true

click-right = pavucontrol

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 100

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC0


; see "man date" for details on how to format the time string
; NOTE: if you want to use syntax tags here you need to use %%{...}
; Default: %H:%M:%S
time-format = %H:%M

; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <label-charging><animation-charging>

; Available tags:
;   <label-discharging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-discharging> (unreleased-)
format-discharging = <label-discharging><ramp-capacity>

; Available tags:
;   <label-full> (default)
;   <bar-capacity>
;   <ramp-capacity>
format-full = <ramp-capacity>

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging = %percentage%%(%time%)

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current discharge rate in watts)
label-discharging = %percentage%%(%time%)

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 500

[module/keyboard]
type = internal/xkeyboard

; Available tags:
;   <label-layout> (default)
;   <label-indicator> (default)
format = <label-indicator>
format-spacing = 0

; Available tokens:
;   %name%
; Default: %name%
label-indicator-on = %name%
label-indicator-padding = 2
label-indicator-background = #8139e8

[module/backlight]
type = internal/backlight
card = intel_backlight
format =  <bar>

bar-width = 10
bar-indicator = ▓
bar-fill = ▒
bar-empty = ░


